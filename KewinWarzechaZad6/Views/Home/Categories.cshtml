@model List<KewinWarzechaZad6.ViewModels.CategoryVM>
@{
    ViewBag.Title = "Categories";
}

<html>
<head>
    <title>Kategorie</title>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center jumbotron page-title text-primary">
                <h1>Lista wszystkich kategorii:</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div>
                    <table class="table table-hover table-categories">
                        @foreach (var category in Model)
                        {
                            <tr>
                                <td><img src="@category.Photo" alt="@category.Name" /></td>
                                <td><h1>@Html.ActionLink(@category.Name, "OneCategoryAdvertisments", "Home", new { category = category.Name }, null)</h1></td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

