@{
    ViewBag.Title = "Wyszukiwarka";
}

@using (Html.BeginForm("Index", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row">
            <div class="jumbotron mainSearch col-md-12">
                <h1 class="text-center text-primary">Wyszukaj ogłoszenia</h1>
                <div class="form-horizontal">
                    <div class="form-group-lg">
                        @Html.Editor("match", new { htmlAttributes = new { @class = "form-control center-block search-block" } })
                    </div>
                    <div class="form-group text-center ">
                        <input type="submit" value="Szukaj" class="btn btn-lg btn-primary search-button" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}